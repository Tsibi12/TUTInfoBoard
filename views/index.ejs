<% layout('layout') -%>

<div class="container"> 
    <h1><%= title %></h1>
    <hr class="my-4">
    <form> 
        <table class="table table-dark">
            <thead>
                <tr>
                <th scope="col">Title</th>
                <th scope="col">Isbn10</th>
                <th scope="col">Author</th>
                <th scope="col">BookId</th>
                <th scope="col">Action</th>
                <th scope="col">Get Book</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i < books.length;i++){%> 
                    <tr>
                        
                        <td><%= books[i].title%></td>
                        <td><%= books[i].isbn10%></td>
                        <td><%= books[i].author%></td>
                        <td><%= books[i].bookId%></td>
                        <td><a href="/book/<%=books[i].bookId%>">View</a></td>
                        <td>
                            <form action="/send-book-id" method="post">
                                <input type="text" name="bookId" value="<%=books[i].bookId%>" placeholder="Book Title or Author" hidden=false>
                                <input type="submit" value="get a book">
                            </form>
                        </td>
                        </tr>
                <%}%>
                
            </tbody>
        </table>
    </form>
</div>

